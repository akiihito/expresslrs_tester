{
  "serial": {
    "port": "/dev/serial0",
    "baudrate": 9600,
    "timeout": 1,
    "bytesize": 8,
    "parity": "N",
    "stopbits": 1
  },
  "settings": {
    "auto_reconnect": true,
    "reconnect_delay": 5,
    "log_enabled": true,
    "log_file": "serial_comm.log"
  },
  "commands": {
    "send_newline": true,
    "encoding": "utf-8",
    "receive_buffer_size": 1024
  }
}
